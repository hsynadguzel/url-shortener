<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(45deg, #00dbde, #fc00ff);
            font-family: 'Inter', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 15px;
            color: white;
        }

        .container {
            width: 60%;
            background: #fff;
            padding: 45px 55px 45px 55px;
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .form-title {
            display: block;
            font-size: 39px;
            color: #333333;
            line-height: 1.2;
            text-align: center;
            padding-bottom: 44px;
        }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
        }

        .form-label {
            font-size: 18px;
            color: #666666;
            line-height: 1.5;
            padding-left: 5px;
            display: block;
            margin-bottom: 10px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
            margin-bottom: 20px;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .form-control::placeholder {
            color: #999;
            opacity: 1;
        }

        .form-control:-ms-input-placeholder {
            color: #999;
        }

        .btn {
            background: linear-gradient(40deg, #fc00ff, #00dbde);
            width: 50%;
            height: 50px;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.5s;
            align-self: center;
        }

        .alert {
            width: 100%;
            padding: 15px;
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .spinner-border {
            width: 1.5rem;
            height: 1.5rem;
            border-width: 0.2em;
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
            border-width: 0.2em;
        }

        @media (max-width: 768px) {
            .container {
                width: 90%;
                padding: 20px;
            }

            .form-title {
                font-size: 28px;
            }
        }

        @media (max-width: 576px) {
            .form-title {
                font-size: 24px;
            }

            .form-control {
                font-size: 14px;
            }

            .btn {
                font-size: 14px;
            }
        }

        @media (max-width: 400px) {
            .form-title {
                font-size: 20px;
            }

            .form-control {
                font-size: 12px;
            }

            .btn {
                font-size: 12px;
            }
        }

        @media (max-width: 320px) {
            .form-title {
                font-size: 18px;
            }

            .form-control {
                font-size: 10px;
            }

            .btn {
                font-size: 10px;
            }
        }

        @media (max-width: 280px) {
            .form-title {
                font-size: 16px;
            }

            .form-control {
                font-size: 8px;
            }

            .btn {
                font-size: 8px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="form-title">Shorten Your URL</h1>
        <% if (typeof message !=='undefined' && message) { %>
            <div id="info-alert" class="alert alert-danger">
                <%= message %>
            </div>
            <% } %>

                <form id="urlForm" onsubmit="handleFormSubmit(event)">
                    <div class="form-group">
                        <label for="longUrl" class="form-label">Enter URL to shorten:</label>
                        <input type="url" id="longUrl" class="form-control" placeholder="Enter a valid URL" required>
                        <button type="submit" id="submit-button" class="btn">Shorten URL</button>
                    </div>
                </form>

                <div id="resultContainer" class="mt-5">
                    <!-- The response from the backend will be displayed here -->
                </div>
    </div>

    <script>
        // Function to handle form submission
        async function handleFormSubmit(event) {
            submitButton = document.getElementById('submit-button');
            infoAlert = document.getElementById('info-alert');
            if (infoAlert) infoAlert.remove();
            event.preventDefault();

            const longUrl = document.getElementById('longUrl').value;

            // Check if the URL is not empty
            if (!longUrl) {
                alert("Please enter a URL");
                return;
            }

            // Set button to loading state
            submitButton.disabled = true;
            submitButton.innerHTML = `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Shortening...`;

            try {
                const response = await fetch('/web/api/v1/url/shorten', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ longUrl }),
                });

                const result = await response.json();
                if (response.ok) {
                    // Display the response dynamically
                    const message = result.message;
                    const data = result.data;
                    const resultContainer = document.getElementById('resultContainer');
                    resultContainer.innerHTML = `
            <div class="alert alert-success">
            <h2>${message}</h2>
            <p><strong>Short URL:</strong> <a href="/${data.shortId}" target="_blank">${data.shortUrl}</a></p>
            <p><strong>Long URL:</strong> ${data.longUrl}</p>
            <p><strong>Created At:</strong> ${new Date(data.createdAt).toLocaleString()}</p>
            <p><strong>Clicks:</strong> ${data.clicks}</p>
            </div>
        `;
                } else {
                    alert(result.error);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Something went wrong!');
            }
            // Reset button to original state
            submitButton.disabled = false;
            submitButton.innerHTML = 'Shorten URL';
        }
    </script>
</body>

</html>